<html>
  <head>
    <title>Service</title>
    <%= stylesheet_link_tag 'service', media: 'all' %>
  </head>
  <body>
    <div class="service-container">
      <h1>New Service</h1>

      <%= form_with(model: @service, url: services_path, local: true) do |form| %>
        <%= form.label :name %>
        <%= form.text_field :name %>

        <%= form.label :description %>
        <%= form.text_area :description , class: 'ip'%>

        <%= form.label :price %>
        <%= form.number_field :price , class: 'ip'%>

        <%= form.label :duration %>
        <%= form.number_field :duration , class: 'ip'%>

        <%= form.submit "Create Service", class: 'button' %>
      <% end %>
    </div>
  </body>
</html>