<html>
  <head class='public-page-head'>
    <%= stylesheet_link_tag "show_service.css" %>
  </head>
  <body>
    <% if (@service.nil?) %>
      404: Service not found
    <% else %>
      <div class="service-container">
        <div class="header">
          <a href="/public/<%= @service_owner.username %>">‚Üê Back to <%= @service_owner.fname %> <%= @service_owner.lname %></a>
          <h3 class="service-title"><%= @service.name %></h3>
        </div>
        <div class="body">
          <p class="service-description"><%= @service.description %></p>
        </div>
        <div class="footer">
          <p class="service-price-duration"><%= "$#{format("%.2f", @service.price)} 
            for #{@service.duration / 60 > 0 ? (@service.duration / 60).to_s + " hour" : ""}
            #{@service.duration / 60 > 0 && @service.duration % 60 > 0 ? " and " : ""}
            #{@service.duration % 60 > 0 ? (@service.duration % 60).to_s + " minutes" : ""}" %></p>
          <%# <button url>Purchase</button> %>
           <%= link_to "Purchase", appointments_page_index_path(@username,@service.id), id: @service.name.gsub(' ', '_') ,class: 'button' %>
          
        </div>
      </div>
    <% end %>
  </body>
</html>